{
  "manifest_version": 3,
  "name": "CoverAI - AI Cover Letter Generator",
  "version": "1.0.0",
  "description": "Generate personalized, professional cover letters using AI. Automatically extracts job descriptions and creates DOCX files.",
  "permissions": [
    "storage",
    "activeTab"
  ],
  "host_permissions": [
    "https://www.linkedin.com/*",
    "https://linkedin.com/*",
    "https://www.indeed.com/*",
    "https://indeed.com/*",
    "https://boards.greenhouse.io/*",
    "https://jobs.lever.co/*",
    "https://*.myworkdayjobs.com/*",
    "https://www.glassdoor.com/*",
    "https://jobright.ai/*",
    "https://www.jobright.ai/*"
  ],
  "action": {
    "default_popup": "src/views/popup.html",
    "default_icon": {
      "16": "icons/icon16.png",
      "48": "icons/icon48.png",
      "128": "icons/icon128.png"
    }
  },
  "background": {
    "service_worker": "src/background/background.js",
    "type": "module"
  },
  "content_scripts": [
    {
      "matches": [
        "https://www.linkedin.com/jobs/*",
        "https://linkedin.com/jobs/*",
        "https://www.indeed.com/*",
        "https://indeed.com/*",
        "https://boards.greenhouse.io/*",
        "https://jobs.lever.co/*",
        "https://*.myworkdayjobs.com/*",
        "https://www.glassdoor.com/job-listing/*",
        "https://jobright.ai/*",
        "https://www.jobright.ai/*"
      ],
      "js": [
        "src/content/contentScript.js"
      ],
      "run_at": "document_idle"
    }
  ],
  "side_panel": {
    "default_path": "src/views/sidepanel.html"
  },
  "icons": {
    "16": "icons/icon16.png",
    "48": "icons/icon48.png",
    "128": "icons/icon128.png"
  },
  "content_security_policy": {
    "extension_pages": "script-src 'self'; object-src 'self'; worker-src 'self'"
  },
  "web_accessible_resources": [
    {
      "resources": [
        "lib/pdf.min.mjs",
        "lib/pdf.worker.min.mjs",
        "lib/mammoth.browser.min.js",
        "lib/docx.min.js"
      ],
      "matches": [
        "https://www.linkedin.com/*",
        "https://linkedin.com/*",
        "https://www.indeed.com/*",
        "https://indeed.com/*",
        "https://boards.greenhouse.io/*",
        "https://jobs.lever.co/*",
        "https://*.myworkdayjobs.com/*",
        "https://www.glassdoor.com/*",
        "https://jobright.ai/*",
        "https://www.jobright.ai/*"
      ],
      "use_dynamic_url": true
    }
  ]
}